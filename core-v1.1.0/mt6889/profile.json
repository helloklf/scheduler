        "booster": {
          "events": ["touch", "buttons", "qpnp_pon", "synaptics", "uinput-fpc", "gpio-keys"],
          "duration": 3000,
          "enter": [
            ["/sys/devices/system/cpu/cpu4/core_ctl/enable", "0"],
            ["/sys/devices/system/cpu/cpu7/core_ctl/enable", "0"],
            ["$util_max_top", "1024"],
            ["$util_max_bg", "100"],
            ["$util_max_fg", "1024"],
            ["$deisolation", "6|7"]
