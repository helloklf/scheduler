            "enter": [
              ["$util_max_top", "1024"],
              ["$util_max_bg", "100"],
              ["$util_max_fg", "1024"],
              ["$deisolation", "6|7"]
            ],
            "exit": [
              ["$util_max_bg", "0"],
              ["$deisolation", "6|7"]
            ]
          }
        }
      ]
    },
    {
      "friendly": "王者荣耀/LOL",
