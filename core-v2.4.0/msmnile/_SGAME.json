{
  "friendly": "王者荣耀/LOL",
  "packages": ["com.tencent.tmgp.sgame", "com.garena.game.kgtw", "com.tencent.lolm"],
  "cpuset": {
    "interval": 1000,
    "heavy_thread": "Thread-",
    "heavy_cores": "6",
    "comm": {
      "6": ["UnityGfx"],
      "7": ["UnityMain","UnityPreload"],
      "4-5": ["NativeThread", "UnityMultiRende", "Worker Thread"],
      "0-5": ["Audio", "NDK Media", "GVoice", "FMOD mixer", "FMOD stream", "ff_read"]
    },
    "other": "0-5"
  },
  "modes": [{
    "mode": ["powersave"],
    "call": [
      ["$cpu_max_0", "1785600"],
      ["$cpu_max_4", "2227200"],
      ["$cpu_max_7", "2227200"]
    ],
    "sensors": [
      {
        "sensor": "fps",
        "interval": 4000,
        "rules": [
          { "threshold": [-1, 100], "enter_once": [["@limiters", "g2:cpu0", "g2:cpu4", "g2:cpu7"]] },
          { "threshold": [99,  75], "enter_once": [["@limiters", "g1:cpu0", "g1:cpu4", "g1:cpu7"]] },
          { "threshold": [70,  -1], "enter_once": [["@limiters", "g0:cpu0", "g0:cpu4", "g0:cpu7"]] }
        ]
      }
    ]
  }, {
    "mode": ["balance"],
    "sensors": [
      {
        "sensor": "fps",
        "interval": 4000,
        "rules": [
          { "threshold": [-1, 100], "enter_once": [["@limiters", "g3:cpu0", "g3:cpu4", "g3:cpu7"]] },
          { "threshold": [99,  75], "enter_once": [["@limiters", "g2:cpu0", "g2:cpu4", "g2:cpu7"]] },
          { "threshold": [70,  -1], "enter_once": [["@limiters", "g1:cpu0", "g1:cpu4", "g1:cpu7"]] }
        ]
      }
    ]
  }, {
    "mode": ["performance"],
    "call": [
      ["$sched_boost", "0"]
    ],
    "sensors": [
      {
        "sensor": "fps",
        "interval": 4000,
        "rules": [
          { "threshold": [-1, 100], "enter_once": [["@limiters", "g3:cpu0", "g3:cpu4", "g3:cpu7"]] },
          { "threshold": [99,  75], "enter_once": [["@limiters", "g3:cpu0", "g3:cpu4", "g3:cpu7"]] },
          { "threshold": [70,  -1], "enter_once": [["@limiters", "g1:cpu0", "g1:cpu4", "g1:cpu7"]] }
        ]
      }
    ]
  }, {
    "mode": ["*"],
    "call": [
      ["$sched_boost", "0"]
    ],
    "booster": {
      "duration": 2000,
      "enter": [
        ["$cpu_min_0", "1478400"],
        ["$cpu_min_4", "1708800"],
        ["$cpu_min_7", "1708800"],
        ["$stune_top_boost", "30"],
        ["$stune_top_perf", "1"]
      ],
      "exit": [
      ]
    }
  }]
}