{
  "friendly": "极限节能",
  "packages": [
    "tv.danmaku.bili", "com.bilibili.app.in",
    "com.google.android.youtube",
    "com.tencent.qqlive",
    "com.qiyi.video",
    "com.qiyi.video.lite",
    "com.qiyi.video.sdkplayer",
    "com.dianshijia.newlive",
    "com.duowan.kiwi",
    "air.tv.douyu.android",
    "com.douyu.rush",
    "com.youku.phone",
    "org.telegram.messenger",
    "com.hunantv.imgo.activity",

    "com.ss.android.ugc.aweme", "com.ss.android.ugc.aweme.lite", "com.ss.android.article.video", "com.smile.gifmaker",

    "com.coolapk.market",

    "com.netease.cloudmusic",
    "com.kugou.android",
    "com.kugou.android.lite",

    "io.legado.app.release",
    "com.duokan.reader",
    "com.ruguoapp.jike",
    "com.ruanmei.ithome"
  ],
  "call": [
    ["$dcs_mode", "1"],
    ["$ged_kpi", "1"],
    ["$ddr_freq_min", "800000000"]
  ],
  "modes": [{
    "mode": ["powersave"],
    "call": [
      ["$boost_affinity", "0"]
    ],
    "booster": {
      "events": ["presets", "NVTCapacitiveTouchScreen"],
      "duration": 2000,
      "idle_delay": 3000,
      "enter": [
        ["$core_ctl_7", "0"],
        ["$cpu_max_0", "#1800000"],
        ["$cpu_min_0", "#1200000"],
        ["$cpu_min_4", "#800000"],
        ["$cpu_min_7", "#800000"],
        ["@classical", "cpu0", "82", "70", "5", "1"],
        ["@classical", "cpu0", "82", "70", "5", "1"],
        ["@classical", "cpu4", "90", "75", "10", "1"],
        ["@preset", "perf_gaming"],
        ["@high_rate", "on"]
      ],
      "exit": [
        ["$core_ctl_7", "1"],
        ["$cpu_min_0", "#800000"],
        ["$cpu_max_0", "#1600000"],
        ["$cpu_min_4", "#200000"],
        ["$cpu_min_7", "#500000"],
        ["@classical", "cpu0", "90", "80", "3", "1"],
        ["@classical", "cpu0", "99", "92", "1", "1"],
        ["@classical", "cpu4", "95", "88", "2", "1"],
        ["@preset", "perf_idle"],
        ["@high_rate", "off"]
      ]
    }
  },{
    "mode": ["balance"],
    "call": [
    ],
    "booster": {
      "events": ["presets", "NVTCapacitiveTouchScreen"],
      "duration": 2000,
      "idle_delay": 3000,
      "enter": [
        ["$core_ctl_7", "0"],
        ["$cpu_min_0", "#1300000"],
        ["$cpu_min_4", "#1000000"],
        ["@preset", "perf_active"],
        ["@high_rate", "on"]
      ],
      "exit": [
        ["$core_ctl_7", "1"],
        ["@preset", "perf_fg_opt"],
        ["$cpu_min_0", "#950000"],
        ["$cpu_min_4", "#200000"],
        ["@high_rate", "off"]
      ]
    }
  }, {
    "mode": ["performance"],
    "booster": {
      "events": ["presets", "NVTCapacitiveTouchScreen"],
      "duration": 2000,
      "idle_delay": 3000,
      "enter": [
        ["$cpu_min_0", "#1400000"],
        ["$cpu_min_4", "#900000"],
        ["$cpu_min_7", "#900000"],
        ["$uclamp_fg_min", "3.00"],
        ["$uclamp_top_min", "7.00"],
        ["@high_rate", "on"]
      ],
      "exit": [
        ["$cpu_min_0", "#450000"],
        ["$cpu_min_4", "#400000"],
        ["$cpu_min_7", "#500000"],
        ["@high_rate", "off"]
      ]
    }
  }, {
    "mode": ["fast"],
    "booster": {
      "events": ["presets", "NVTCapacitiveTouchScreen"],
      "duration": 2000,
      "idle_delay": 3000,
      "enter": [
        ["$uclamp_fg_min", "max"],
        ["$uclamp_top_min", "max"]
      ]
    }
  }, {
    "mode": ["pedestal"],
    "sensors": [{
      "disable": false,
      "sensor": "/sys/class/power_supply/battery/temp",
      "interval": 15000,
      "rules": [
        { "threshold": [-1, 440], "enter": [["@charge", "suspend"]] },
        { "threshold": [440, 310], "enter": [["@charge", "suspend"]] },
        { "threshold": [410, 380], "enter": [["@charge", "normal"]] },
        { "threshold": [380, -10], "enter": [["@charge", "normal"]] }
      ]
    }],
    "booster": {
      "events": ["presets", "NVTCapacitiveTouchScreen"],
      "duration": 2000,
      "idle_delay": 3000,
      "enter": [ ["@preset", "touch_boost_pedestal"] ],
      "exit": [ ["@preset", "exit_boost_pedestal"] ]
    }
  }]
}