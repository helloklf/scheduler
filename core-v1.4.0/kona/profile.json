    },
    {
      "friendly": "狗屎/毒瘤",
      "packages": [
        "com.tencent.mm:appbrand",
        "com.tencent.mm:toolsmp"
      ],
      "modes": [{
        "mode": ["powersave", "balance"],
        "call": [
          ["$core_ctl_0", "0"],
          ["$core_ctl_4", "0"],
          ["$core_ctl_7", "0"],
          ["@cpuset", "0", "0-4", "0-7", "0-7"],
          ["@cpu_freq", "policy0", "1.4Ghz", "max"],
          ["@cpu_freq", "policy4", "1Ghz", "2.4Ghz"],
          ["@cpu_freq", "policy7", "min", "2.4Ghz"],
          ["$mi_thermal", "10"]
        ]
      }]
    },
    {
      "friendly": "社交APP",
      "packages": [
        "com.tencent.mobileqq",
        "com.tencent.tim",
        "com.tencent.mm",
        "org.telegram.messenger"
      ],
      "import": "_IM.json"
    },
    {
      "friendly": "待机",
      "packages": ["standby"],
      "import": "_Standby.json"
    },
    {
      "friendly": "备份还原",
      "packages": ["com.miui.huanji", "com.miui.backup"],
      "call": [
        ["@uclamp", "0.00~max", "0.00~max", "0.00~max"],
        ["@high_rate", "off", "2000"]
      ]
    },
    {
      "friendly": "All",
      "packages": ["*"],
      "modes": [{
        "mode": ["powersave"],
        "booster": {
          "events": ["presets"],
          "duration": 2000,
          "idle_delay": 2000,
          "enter": [
            ["$core_ctl_4", "0"],
            ["@high_rate", "on"]
          ],
          "exit": [
            ["@high_rate", "off"]
          ]
        }
      },{
        "mode": ["balance"],
        "disable": true,
        "booster": {
          "events": ["presets"],
          "duration": 2000,
          "enter": [
            ["$sched_group_up", "10"],
            ["$stune_top_perf", "1"]
          ],
          "exit": []
        }
      },{
        "mode": ["performance", "fast"],
        "disable": true,
        "booster": {
          "events": ["presets"],
          "duration": 2000,
          "enter": [
            ["$stune_top_boost", "100"],
            ["$stune_top_perf", "1"],
            ["$sched_boost", "2"]
          ],
          "exit": [
            ["$sched_boost", "0"]
          ]
        }
      }]
    }
  ]
}