        "com.hunantv.imgo.activity"
      ],
      "import": "_Video.json"
    },
    {
      "friendly": "提高滑动性能",
      "packages": [
        "com.taobao.idlefish",
        "com.taobao.taobao",
        "com.android.browser",
        "com.baidu.tieba_mini",
        "com.baidu.tieba",
