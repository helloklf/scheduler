    {
      "friendly": "All",
      "packages": ["*"],
      "sensors": [],
      "modes": [{
        "mode": ["powersave"],
        "booster": {
          "events": ["presets"],
          "duration": 2000,
          "idle_delay": 3000,
          "enter": [
            ["$cpuset_top", "0-7"],
            ["@uclamp", "0.00~5.00", "0.00~max", "0.10~max"],
            ["@high_rate", "on"]
          ],
          "exit": [
            ["@uclamp", "0.00~0.00", "0.00~15.00", "0.00~22.00"],
            ["@high_rate", "off"]
          ]
        }
      }, {
        "mode": ["balance"],
        "booster": {
          "events": ["presets"],
          "duration": 3000,
          "enter": [
            ["$cpuset_top", "0-7"],
            ["@uclamp", "0.00~max", "1.00~max", "1.00~max"]
          ],
          "exit": [
            ["@uclamp", "0.00~10.00", "0.00~max", "0.00~max"]
          ]
        }
      },{
        "mode": ["performance"],
        "sensors": [
          {
            "sensor": "cpu",
            "interval": 100,
            "props": ["$gpu_max_khz", "$cpu_max_0", "$cpu_max_4", "$cpu_max_7"],
            "rules": [
              { "threshold": [   -1, 96000], "values": ["492000000", "1574400", "2112000", "2227200"] },
              { "threshold": [96000, 94000], "values": ["599000000", "1574400", "2112000", "2227200"] },
              { "threshold": [94000, 92000], "values": ["640000000", "1689600", "2112000", "2227200"] },
