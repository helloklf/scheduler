{
  "platform": "taro",
  "platform_name": "8GEN1",
  "framework": 130,
  "alias": {
    "gpu_max_khz": "/sys/class/kgsl/kgsl-3d0/devfreq/max_freq",
    "max_cpus_cpu7": "/sys/devices/system/cpu/cpu7/core_ctl/max_cpus",
    "mi_thermal": "/sys/class/thermal/thermal_message/sconfig",
    "charge_limit": "/sys/class/power_supply/battery/charge_control_limit",
    "night_charging": "/sys/class/power_supply/battery/night_charging",
    "bus_ddr": "/sys/devices/system/cpu/bus_dcvs/DDR/19091000.qcom,bwmon-ddr/max_freq"
  },
  "features": {
    "high_rate": {
      "enable": true,
      "enable_control": "/data/local/tmp/scene_refresh_rate",
      "device_policy": [{
        "device": "cupid", "name": "Mi 12", "enable": true,
        "mode_high_rate": "1", "mode_low_rate": "0", "mode_standby": "0",
        "1080P120Hz": "1", "1080P90Hz": "2", "1080P60Hz": "0"
      }, {
        "device": "ingres", "name": "K50G", "enable": true,
        "mode_high_rate": "1", "mode_low_rate": "0", "mode_standby": "0",
        "1080P120Hz": "1", "1080P60Hz": "0"
      }]
    }
  },
  "schemes": {
    "powersave": {
      "call": [
        ["$bus_ddr", "1708000"],
        ["$core_ctl_4", "1"],
        ["$core_ctl_7", "1"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "1", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~5.00", "0.00~max", "0.00~max"],
        ["@gpu_freq", "min", "500MHz"],
        ["@high_rate", "off", "3000"]
      ]
    },
    "balance": {
      "call": [
        ["$bus_ddr", "2092000"],
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "1"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "0-2", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.00~max", "0.00~max"],
        ["@gpu_freq", "min", "600MHz"],
        ["@high_rate", "on"]
      ]
    },
    "performance": {
      "call": [
        ["$bus_ddr", "2092000"],
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "0"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "0-1", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "0.25~max"],
        ["@gpu_freq", "min", "750MHz"],
        ["@high_rate", "on"]
      ]
    },
    "fast": {
      "call": [
        ["$bus_ddr", "2092000"],
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "0"],
        ["$max_cpus_cpu7", "1"],
        ["$mi_thermal", "10"],
        ["@cpuset", "1", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "0.5~max"],
        ["@gpu_freq", "min", "max"],
        ["@high_rate", "on"]
      ]
    },
    "pedestal": {
      "call": [
        ["$bus_ddr", "2092000"],
        ["$core_ctl_4", "0"],
        ["$cpu7_offline", "0"],
        ["$max_cpus_cpu7", "1"],
        ["$mi_thermal", "10"],
        ["@cpuset", "1", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "2.0~max"],
        ["@gpu_freq", "300MHz", "max"],
        ["@high_rate", "on"]
      ]
    }
  },
  "apps": [
