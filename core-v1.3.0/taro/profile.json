{
  "platform": "taro",
  "platform_name": "8GEN1",
  "framework": 130,
  "alias": {
    "max_cpus_cpu7": "/sys/devices/system/cpu/cpu7/core_ctl/max_cpus",
    "mi_thermal": "/sys/class/thermal/thermal_message/sconfig"
  },
  "features": {
    "high_rate": {
      "enable": true,
      "enable_control": "/data/local/tmp/scene_refresh_rate",
      "device_policy": [{
        "device": "cupid", "name": "Mi 12", "enable": true,
        "mode_high_rate": "1", "mode_low_rate": "0",
        "1080P120Hz": "1", "1080P90Hz": "2", "1080P60Hz": "0"
      }, {
        "device": "ingres", "name": "K50G", "enable": true,
        "mode_high_rate": "1", "mode_low_rate": "0",
        "1080P120Hz": "1", "1080P60Hz": "0"
      }]
    }
  },
  "schemes": {
    "powersave": {
      "call": [
        ["$core_ctl_4", "1"],
        ["$core_ctl_7", "1"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "0", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.00~max", "0.00~max"],
        ["@gpu_freq", "min", "500MHz"],
        ["@high_rate", "off", "3000"]
      ]
    },
    "balance": {
      "call": [
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "1"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "0-2", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.00~max", "0.00~max"],
        ["@gpu_freq", "min", "600MHz"],
        ["@high_rate", "on"]
      ]
    },
    "performance": {
      "call": [
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "0"],
        ["$max_cpus_cpu7", "1"],
        ["@cpuset", "0-1", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "0.25~max"],
        ["@gpu_freq", "min", "750MHz"],
        ["@high_rate", "on"]
      ]
    },
    "fast": {
      "call": [
        ["$core_ctl_4", "0"],
        ["$core_ctl_7", "0"],
        ["$max_cpus_cpu7", "1"],
        ["$mi_thermal", "10"],
        ["@cpuset", "0", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "0.5~max"],
        ["@gpu_freq", "300MHz", "max"],
        ["@high_rate", "on"]
      ]
    },
    "pedestal": {
      "call": [
        ["$core_ctl_4", "0"],
        ["$cpu7_offline", "0"],
        ["$max_cpus_cpu7", "1"],
        ["$mi_thermal", "10"],
        ["@cpuset", "0", "0-3", "0-7", "0-7"],
        ["@uclamp", "0.00~max", "0.10~max", "2.0~max"],
        ["@gpu_freq", "500MHz", "max"],
        ["@high_rate", "on"]
      ]
    }
  },
  "apps": [
    {
      "fir": "模拟器",
      "packages": ["xyz.aethersx2.android", "com.aiwu.dolphinemu"],
      "import": "_Simulate.json"
    },
    {
      "fir": "机动都市阿尔法",
      "packages": ["com.netease.jddsaef", "com.netease.g93na", "com.netease.g93natw"],
      "cpuset": {
        "heavy_thread": "Thread-",
        "heavy_cores": "7",
        "other": "0-6"
      }
    },
    {
      "friendly": "原神",
      "packages": [
        "com.miHoYo.Yuanshen",
        "com.miHoYo.ys.mi",
        "com.miHoYo.ys.bilibili",
        "com.miHoYo.GenshinImpact"
      ],
      "import": "_GenshinImpact.json"
    },
    {
      "friendly": "幻塔",
      "packages": [
        "com.dw.h5yvzr.yt",
        "com.pwrd.hotta.laohu",
        "com.hottagames.hotta.bilibili",
        "com.hottagames.hotta.mi"
      ],
      "call": [
        ["@cpuset", "0", "0", "0-7", "0-7"]
      ],
      "cpuset": {
        "interval": 2000,
        "comm": {
          "7": ["GameThread"],
          "4-7": ["RenderThread", "RHIThread"]
        },
        "cpuset": "0-6"
      }
    },
    {
      "friendly": "和平精英",
