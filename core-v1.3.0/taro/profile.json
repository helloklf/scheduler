    {
      "friendly": "备份还原",
      "packages": ["com.miui.huanji", "com.miui.backup"],
      "call": [
        ["@uclamp", "0.00~max", "0.00~max", "0.00~max"],
        ["@high_rate", "off", "2000"]
      ]
    },
    {
      "friendly": "All",
      "packages": ["*"],
      "sensors": [],
      "modes": [{
        "mode": ["powersave"],
        "booster": {
          "events": ["touch", "buttons", "qpnp_pon", "synaptics", "uinput-fpc", "gpio-keys", "mtk-pmic-keys", "Headset", "mtk-kpd"],
          "duration": 2000,
          "idle_delay": 3000,
          "enter": [
            ["$cpuset_top", "0-7"],
            ["@uclamp", "0.00~max", "0.00~max", "0.10~max"],
            ["@high_rate", "on"]
          ],
          "exit": [
            ["@uclamp", "0.00~2.00", "0.00~15.00", "0.00~22.00"],
            ["@high_rate", "off"]
          ]
        }
      },{
        "mode": ["balance"],
        "booster": {
          "events": ["touch", "buttons", "qpnp_pon", "synaptics", "uinput-fpc", "gpio-keys", "mtk-pmic-keys", "Headset", "mtk-kpd"],
          "duration": 3000,
          "enter": [
            ["$cpuset_top", "0-7"],
            ["@uclamp", "0.00~max", "1.00~max", "1.00~max"]
          ],
          "exit": [
            ["@uclamp", "0.00~10.00", "0.00~max", "0.00~max"]
          ]
        }
      },{
        "mode": ["performance", "fast"],
        "booster": {
          "events": ["touch", "buttons", "qpnp_pon", "synaptics", "uinput-fpc", "gpio-keys", "mtk-pmic-keys", "Headset", "mtk-kpd"],
          "duration": 2000,
          "enter": [
            ["@uclamp", "0.00~max", "5.00~max", "5.00~max"]
          ],
          "exit": [
            ["@uclamp", "0.00~20.00", "0.00~max", "0.00~max"]
          ]
        }
      }]
    }
  ]
