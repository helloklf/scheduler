      "sensors": [
        {
          "sensor": "cpu",
          "friendly": "Common Thermal - SOC",
          "interval": 200,
          "props": ["$gpu_max_khz"],
          "rules": [
            { "threshold": [   -1, 92000], "values": ["443000000"] },
            { "threshold": [92000, 88000], "values": ["491000000"] },
            { "threshold": [88000, 83000], "values": ["540000000"] },
            { "threshold": [83000,    -1], "values": ["608000000"] }
